@page
@using TelegramMemberShipBot_CryptoPayments.Database
@using TelegramMemberShipBot_CryptoPayments.Models
@model TelegramMemberShipBot_CryptoPayments.Pages.PaymentsModel
@{
    DatabaseContext DbContext = new();
    List<Payment> Payments = DbContext.GetLast100Payment();
    DbContext.Dispose();
}

<h2 style="text-align: center;">Last Created 100 Payment</h2>
 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Transaction Id")
            </th>
            <th>
                @Html.DisplayName("Payment Adress")
            </th>
            <th>
                @Html.DisplayName("Expiry Date")
            </th>
            <th>
                @Html.DisplayName("Last Status")
            </th>
            <th>
                @Html.DisplayName("Amount Coin")
            </th>
            <th>
                @Html.DisplayName("Coin")
            </th>
            <th>
                @Html.DisplayName("Username")
            </th>
            <th>
                @Html.DisplayName("Full Name")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Payment in Payments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Payment.TransactionId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Payment.PaymentAdress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Payment.ExpiryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Payment.LastStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Payment.AmountCoin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Payment.Coin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Payment.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Payment.FullName)
                </td>
            </tr>
        }
    </tbody>
</table>